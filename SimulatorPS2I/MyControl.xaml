<UserControl x:Class="SimulatorPS2I.MyControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulatorPS2I"
        mc:Ignorable="d"
       Width="1800" Height="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="83*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="E:\Anul 3\SEM II\PS2I\PS2I-Echipa_DotNet\SimulatorPS2I\images\M40.png" Margin="0,10,0,0" Grid.RowSpan="2" />
        <Grid Height="780" VerticalAlignment="Top" Margin="-10,10,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
